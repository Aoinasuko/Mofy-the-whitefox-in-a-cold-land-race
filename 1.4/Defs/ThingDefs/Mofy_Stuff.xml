<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>Mofy_MofuHail</defName>
    <label>MofuHail</label>
    <description>This material is made from a combination of MofyStone and ice. Because it is not a perfect stone material, it is somewhat susceptible to fire, but it is a very good insulator. It is also suitable for crafts because of its beauty.</description>
    <graphicData>
      <texPath>Mofy/Thing/MofuHail</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>ChunkRock_Drop</soundInteract>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <MarketValue>4.4</MarketValue>
      <Beauty>-1</Beauty>
      <Mass>1.1</Mass>
      <StuffPower_Armor_Sharp>1.5</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>1.5</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>0</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>40</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1.75</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.75</BluntDamageMultiplier>
    </statBases>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.001</commonality>
      <color>(170,240,255)</color>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>3</MaxHitPoints>
        <MarketValue>1.5</MarketValue>
        <Flammability>0.1</Flammability>
        <WorkToBuild>1.5</WorkToBuild>
        <WorkToMake>1.5</WorkToMake>
        <BedRestEffectiveness>0.95</BedRestEffectiveness>
        <DoorOpenSpeed>0.9</DoorOpenSpeed>
        <MeleeWeapon_CooldownMultiplier>0.75</MeleeWeapon_CooldownMultiplier>
        <Beauty>3.5</Beauty>
      </statFactors>
    </stuffProps>
  </ThingDef>

