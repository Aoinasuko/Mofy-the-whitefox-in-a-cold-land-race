<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="Mofy_BaseWeapon_Melee" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <tickerType>Never</tickerType>
    <tradeability>Sellable</tradeability>
    <equipmentType>Primary</equipmentType>
    <useHitPoints>true</useHitPoints>
    <pathCost>14</pathCost>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <Beauty>5</Beauty>
      <SellPriceFactor>0.20</SellPriceFactor>
    </statBases>
    <graphicData>
      <onGroundRandomRotateAngle>-35</onGroundRandomRotateAngle>
    </graphicData>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <burnableByRecipe>true</burnableByRecipe>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <relicChance>0</relicChance>
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
          <li>WoodLog</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smelt</effectWorking>
      <soundWorking>Recipe_MakeBow</soundWorking>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>
  
  <!-- ================================= -->
  
  <ThingDef ParentName="Mofy_BaseWeapon_Melee">
    <defName>Mofy_Pickaxe</defName>
    <label>Mofy Pickaxe</label>
    <description>This is a Pickaxe for small-bodied races. It would be reckless to use it as a weapon.\n\n&lt;color=#B1FBFF&gt;This equipment would also be able to be equipped by other races with smaller body sizes.&lt;/color&gt;</description>
    <graphicData>
      <texPath>Mofy/Thing/Weapon/Tool/Pickaxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <equippedStatOffsets>
        <MiningSpeed>0.5</MiningSpeed>
    </equippedStatOffsets>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>Mofy_LowTier</li>
    </weaponTags>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>Mofy_CraftTable</li>
      </recipeUsers>
      <researchPrerequisite>Mofy_LittleBlacksmith</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
